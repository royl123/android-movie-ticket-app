<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/overviewText"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="@+id/overviewText"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/overviewText"
        android:layout_width="237dp"
        android:layout_height="217dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/directions"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="[Click here for more info]"
        android:textColor="#FFFF00"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/overviewText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="143dp"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/releaseDate"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="@+id/spacer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="164dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFF00"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/spacer"
        app:layout_constraintEnd_toEndOf="@+id/spacer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/spacer" />

    <TextView
        android:id="@+id/spacer"
        android:layout_width="154dp"
        android:layout_height="29dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/spacer2"
        android:layout_width="243dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.803"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overviewText" />


</androidx.constraintlayout.widget.ConstraintLayout>